<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_400"
    tools:context=".Views.ListFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/table_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/score_line"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Table of records"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_LST_scores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/table_LBL_title"
        android:layout_centerInParent="true"
        tools:listitem="@layout/horisontal_score_item" />

</RelativeLayout>